// https://github.com/microsoft/vscode-dev-containers/tree/v0.202.5/containers/docker-existing-docker-compose
// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// If you want to run as a non-root user in the container, see .devcontainer/docker-compose.yml.
{
	"name": "Existing Docker Compose (Extend)",
	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// The .devcontainer/docker-compose.yml file contains any overrides you need/want to make.
	"dockerComposeFile": [
		"../docker-compose.yml",
		"docker-compose.yml"
	],
	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "python",
	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	"workspaceFolder": "/workspace",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"workbench.iconTheme": "material-icon-theme",
		"workbench.colorTheme": "Community Material Theme Ocean",
		"editor.fontSize": 15,
		"editor.wordWrap": "on",
		"workbench.tree.indent": 25,
		"workbench.tree.renderIndentGuides": "always",
		"files.autoSave": "afterDelay",
		"files.insertFinalNewline": true,
		"files.trimFinalNewlines": true,
		"files.trimTrailingWhitespace": true,
		"editor.mouseWheelZoom": true,
		"explorer.confirmDelete": false,
		"python.linting.enabled": true,
		"python.linting.flake8Enabled": true,
		"editor.formatOnSave": true,
		"python.linting.lintOnSave": true,
		"python.linting.mypyArgs": [
			"--follow-imports=silent",
			"--ignore-missing-imports",
			"--show-column-numbers"
		],
		"python.linting.flake8Args": [
			"--max-line-length=200",
		],
		"python.formatting.autopep8Args": [
			"-max-line-length=500"
		]
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"equinusocio.vsc-community-material-theme",
		"ms-toolsai.jupyter-keymap",
		"pkief.material-icon-theme",
		"equinusocio.vsc-material-theme",
		"equinusocio.vsc-material-theme-icons",
		"almenon.arepl",
		"ms-toolsai.jupyter",
		"ms-toolsai.jupyter-renderers",
		"ms-vsliveshare.vsliveshare",
		"esbenp.prettier-vscode",
		"ms-python.vscode-pylance",
		"ms-python.python",
		"njpwerner.autodocstring",
		"shardulm94.trailing-spaces",
		"mosapride.zenkaku",
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8000],
	// Uncomment the next line if you want start specific services in your Docker Compose config.
	// "runServices": [],
	// Uncomment the next line if you want to keep your containers running after VS Code shuts down.
	"shutdownAction": "stopCompose",
	// Uncomment the next line to run commands after the container is created - for example installing curl.
	"postCreateCommand": "apt-get update && apt-get install -y curl && python -m pip install --upgrade pip && pip install -r requirements.txt"
	// Uncomment to connect as a non-root user if you've added one. See https://aka.ms/vscode-remote/containers/non-root.
	// "remoteUser": "vscode"
}
